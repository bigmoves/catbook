<a {{action "like" item}} title="Like this">Like</a>

<span class="like-count" data-dropdown="like-{{elementId}}" data-options="is_hover:true; hover_timeout:500" aria-controls="like={{elementId}}" aria-expanded="false">
  (<span class="like-count-number">{{likes.length}}</span>)
</span>

<div id="like-{{elementId}}" class="f-dropdown content" data-dropdown-content aria-hidden="true" tabindex="-1">
  Likes:
  <ul class="no-bullet">
    {{#each likes as |like|}}
      <li>
        {{#link-to "profile" like.user}}
          {{like.user.fullName}}
        {{/link-to}}
      </li>
    {{/each}}
  </ul>
</div>