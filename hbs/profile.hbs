<div class="row">
  <div class="small-12 cover"><img src={{model.coverPhoto}}></div>
</div>

<div class="wrap">
  <div class="row profile-photo">
    <div class="small-4 columns"><img src={{model.photo}}></div>
    <div class="small-4 columns name">{{model.fullName}}</div>
  </div>

{{about-profile model=model}}

  <div class="row">
    <div class="small-4 columns">

    <h3>Hobbies:</h3>
    {{#if model.hobbies}}
    <ul>
      {{#each model.hobbies as |hobby|}}
        <li>{{hobby.hobbyName}}</li>
      {{/each}}
    </ul>
    {{else}}
      No hobbies
    {{/if}}
    {{input type="text" value=newHobby placeholder="Add a hobby"}}
    <button type="button" {{action "addHobby" newHobby}} class="tiny round right">Add Hobby</button>

    </div>
  </div>
  <div class="row">
  <div class="small-4 columns">
    <h3>Friends:</h3>
    {{#if model.friend}}
    <ul class="no-bullet">
      {{#each model.friend as |friend|}}
      {{#link-to "profile" friend}}
        <li class="friend"><img src={{friend.user.photo}}> <span>{{friend.user.fullName}}</span></li>
      {{/link-to}}
      {{/each}}
    </ul>
    {{else}}
      {{model.fullName}} has no friends (∩︵∩)
    {{/if}}
  </div>
    
  </div>
</div>